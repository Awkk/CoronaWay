<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuarantineFragment"
    android:background="@color/colorMainBlue"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/date_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/quarantine_info"-->
<!--            android:textColor="@color/design_default_color_background" />-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/start_quarantine_text"
            android:textColor="@color/design_default_color_background"
            android:textSize="29sp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/lets_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_begin"
            android:textColor="@color/com_facebook_button_text_color"
            android:textSize="15sp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/com_facebook_button_text_color"
            app:strokeWidth="5dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="37dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >

            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="2"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="3"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="4"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="5"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="6"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="7"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="8"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="9"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="10"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="11"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="12"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="13"
                android:textSize="24sp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="14"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/message_of_day_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/message_of_the_day"
                android:textColor="@color/com_facebook_button_text_color"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/com_facebook_button_text_color"
                app:strokeWidth="5dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="8dp"

                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/symptoms_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/report_symptoms"
                android:textColor="@color/com_facebook_button_text_color"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/com_facebook_button_text_color"
                app:strokeWidth="5dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>