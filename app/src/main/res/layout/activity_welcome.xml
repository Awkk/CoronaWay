<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="90"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcometext_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:text="@string/welcometext_1"
        android:textColor="@color/colorMainBlue"
        android:textSize="50sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcometext_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcometext_2"
        android:textColor="@color/colorMainBlue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcometext_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcometext_3"
        android:textColor="@color/colorMainBlue"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/welcometext_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcometext_4"
        android:textColor="@color/colorMainBlue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcometext_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="3dp"
        android:text="@string/welcometext_5"
        android:textColor="@color/colorMainBlue"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/welcometext_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcometext_6"
        android:textColor="@color/colorMainBlue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/welcomeBtn_Next"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_gravity="start"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="96dp"
        android:contentDescription="@string/go_btn"
        android:enabled="false"
        android:onClick="sendMessage"
        android:src="@drawable/login_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.131" />
</LinearLayout>